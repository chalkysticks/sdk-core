{
    "author": "ChalkySticks LLC",
    "bugs": {
        "url": "https://github.com/chalkysticks/sdk-core/issues"
    },
    "dependencies": {
        "@chalkysticks/mrm-preset": "github:chalkysticks/mrm-preset",
        "esbuild": "^0.16.10",
        "restmc": "git+https://github.com/mattkenefick/restmc.git"
    },
    "description": "ChalkySticks SDK core for web-based clients",
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.2.0",
        "@typescript-eslint/eslint-plugin": "^4.13.0",
        "@typescript-eslint/parser": "^4.13.0",
        "chai": "^4.2.0",
        "eslint": "^7.17.0",
        "mocha": "^8.2.1",
        "nyc": "^15.1.0",
        "ts-mocha": "^8.0.0",
        "typescript": "^4.1.3"
    },
    "exports": {
        ".": {
            "import": "./build/esm/index.js",
            "require": "./build/cjs/index.js"
        }
    },
    "files": [
        "!**/*.spec.*",
        "!**/*.json",
        "build",
        "CHANGELOG.md",
        "LICENSE",
        "README.md"
    ],
    "homepage": "https://www.chalkysticks.com",
    "keywords": [
        "billiards",
        "chalkysticks",
        "pool"
    ],
    "license": "GPL-3.0-or-later",
    "main": "./build/cjs/index.js",
    "module": "./build/esm/index.js",
    "name": "@chalkysticks/sdk-core",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/chalkysticks/sdk-core.git"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json && bash ./tool/create-packages.sh",
        "build:web": "./node_modules/.bin/esbuild src/index.ts --bundle --minify --sourcemap --target=chrome62 --format=esm --outfile=build/web/chalkysticks-core.js",
        "coverage": "nyc npm test",
        "example": "http-server",
        "lint": "eslint \"src/**/*.ts\"",
        "prettier": "prettier -c src/**/*.ts",
        "test": "ts-mocha -p ./node_modules/@chalkysticks/mrm-preset/tsconfig.test.json test/**/*.spec.ts",
        "version": "git add -A src"
    },
    "types": "dist/index.d.ts",
    "version": "1.1.1"
}